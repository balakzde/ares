<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath*:ares.properties" ignore-unresolvable="true"/>

    <bean id="aresTemplate" class="org.springframework.web.client.RestTemplate" name="aresTemplate"/>
    <bean class="cz.master.blaster.balakzde.service.impl.AresORServiceImpl">
        <property name="aresORUrl" value="${ares.or.url}"/>
        <property name="icoParameterName" value="${ares.params.ico.name}"/>
        <property name="versionParameterName" value="${ares.params.version.name}"/>
        <property name="versionParameterValue" value="${ares.params.version.value}"/>
        <property name="xmlParameterName" value="${ares.params.xml.name}"/>
        <property name="xmlParameterValue" value="${ares.params.xml.value}"/>
    </bean>

</beans>